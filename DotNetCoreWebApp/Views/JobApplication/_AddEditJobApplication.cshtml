@model Dto.JobApplication.JobClassDto
<div id="idjobapplication">
    <!-- Modal content-->
    @using (Html.BeginForm("AddEditJobApplication", "JobApplication",
           FormMethod.Post, new { @class = "donat-popup-form" }))
    {
        <div class="modal-content">
            <div class="modal-header">
                <!-- modal header  -->
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"> Add Job Application</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label class="col-xs-12 col-sm-4 control-label" for="Title">Job Code</label>
                    <div class="col-xs-12 col-sm-8">
                        <input asp-for="JobCode" class="form-control" placeholder="Donor Reference" type="text" readonly>
                        <span asp-validation-for="JobCode" class="text-red"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-12 col-sm-4 control-label" for="Title">Title</label>
                    <div class="col-xs-12 col-sm-8">
                        <input asp-for="Title" class="form-control" placeholder="Type Of Food" type="text" readonly>
                        <input asp-for="Title" class="form-control" type="hidden">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-12 col-sm-4 control-label" for="Title">Minimum Qualification</label>
                    <div class="col-xs-12 col-sm-8">
                        <input asp-for="MinimumQualification" class="form-control" placeholder="type Minimum Qualification" type="text">
                        <input asp-for="MinimumQualification" class="form-control" type="hidden">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-12 col-sm-4 control-label" for="Title">Minimum Qualification</label>
                    <div class="col-xs-12 col-sm-8">
                        <input asp-for="SortDescription" class="form-control" placeholder="type Minimum Qualification" type="text">
                        <input asp-for="SortDescription" class="form-control" type="hidden">
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-xs-12 col-sm-4 control-label" for="Title">Date</label>
                    <div class="col-xs-12 col-sm-8">
                        <input asp-for="LastDate" class="form-control datepicker" placeholder="DD/MM/YYYY" type="text">
                        <span asp-validation-for="LastDate" class="text-red"></span>
                    </div>
                </div>
            </div>
            <div class="frm-footer">

                <button class="btn btn-primary" id="btn-submit" type="submit">
                    Submit
                    <i class="fa fa-arrow-circle-right"></i>
                </button>
            </div>
            <!-- end modal body content  -->
        </div>
    }
</div>

